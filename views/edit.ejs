<%- include('./components/header') %>

<body> 

    <%- include('./components/navigation') %>

    
    <form id="update_form" method="post" action="/functions/edit_product/<%=Product.id%>">

        <div class="container">

            <div class="row">
                <center>
                <div class="col-lg-2">
                    <img src="<%= Product.productImage %>" style="width: 100px;">
                </div>
                </center>
                <br>
                <div style="height: 100% ; ">
                    <div class="col-lg-2">
                        <label  class="form-label">product name</label>
                        <input type="text" class="form-control" name="Productname" value="<%=Product.productname%>" style="margin-right: 80px;"  >
                    </div>
                    <div class="col-lg-4">
                        <label  class="form-label">product image</label>
                        <input type="text" class="form-control" name="ProductmainImage" value="<%=Product.productImage%>" style="margin-right: 80px;"  >
                    </div>
                </div>
                <div class="col-lg-2">
                    <label  class="form-label">product price</label>
                    <input type="text" class="form-control" name="Productprice" value="<%=Product.productprice%>" style="margin-right: 80px;"  >
                </div>

                <div class="col-lg-2">
                    <label  class="form-label">units in stock</label>
                    <input type="text" class="form-control" name="unitInStock" value="<%=Product.unitInStock%>" style="margin-right: 80px;"  >
                </div>
                <div class="col-lg-2">
                    <label  class="form-label">product pescription</label>
                    <input type="text" class="form-control" name="productDescription" value="<%=Product.productDescription%>" style="margin-right: 80px;"  >
                </div>
                
                    <div class="col-lg-2">
                        <label  class="form-label">is Available</label>
                        <select class="form-select" name="isAvailable" aria-label="Default select example">
                            <%if(Product.isAvailable == true ){%>
                                <option selected value="true" >true</option>
                                <option value="false">false</option>
                            <%}else{%>
                                <option value="true" >true</option>
                                <option selected value="false">false</option>
                            <%}%>
                        </select>
                    </div>
                    <div class="col-lg-2">
                        <label  class="form-label">in Category</label>
                        <select class="form-select" name="CategoryId" aria-label="Default select example">
                            <%for(let category of categories){%>
                                <%if(Product.CategoryId == category.id ){%>
                                    <option selected value="<%=category.id%>" ><%=category.categoryname%></option>
                                <%}else{%>
                                    <option value="<%=category.id%>" ><%=category.categoryname%></option>
                                <%}%>
                            <%}%>
                        </select>
                    </div>
                
                <br>
                <center>
                    <button style="margin-top: 30px;" from="update_form" type="submit" class="btn btn-primary">Update</button>
                </center>
            </div>
        </div>
    </form>
    <hr color="blue" size="10px" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

</body>
</html>